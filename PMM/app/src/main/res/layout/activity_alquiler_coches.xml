<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".AlquilerCoches">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Alquiler\nde\nCoches"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/coche"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/coche"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center">

        </Spinner>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sinSeguro"
                android:text="Sin seguro"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/conSeguro"
                android:text="Seguro a todo riesgo"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <CheckBox
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/aire"
            android:text="Aire acondicionado"
            android:layout_gravity="center"/>

        <CheckBox
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/gps"
            android:text="GPS"
            android:layout_gravity="center"/>


        <CheckBox
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioDvd"
            android:text="Radio/DVD"
            android:layout_gravity="center"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nÃºmero de Horas"
        android:id="@+id/nHoras"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL PRECIO"
            android:id="@+id/btnPrecio"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resPrecio"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFact"
        android:layout_gravity="center"
        android:text="Factura"/>

</LinearLayout>